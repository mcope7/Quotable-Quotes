<div id="header">
  <h1>Add a quote for <%= @person.name %></h1>
</div>
<div id="content">
  <% form_for :quote, :url => { :action => :create, :id => @person.id } do |f| %>
    <%= f.error_messages %>
  
    <p>
      <%= f.label :text, "Quote" %><br />
      <%= f.text_area :text, :rows => 10, :cols => 90 %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>

  <%= link_to 'All Quotable Quotes', quotes_path %> |
  <%= link_to 'Authors', authors_path %> |
  <%= link_to 'Guess a Quote', :controller => 'quotes', :action => 'show', :id => "#{Quote.random_quote}" %> |
  <%= link_to 'Home', root_path %>
</div>
